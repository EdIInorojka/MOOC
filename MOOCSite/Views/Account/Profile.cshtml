@using MOOCSite.Models
@model User

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Профиль пользователя</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Логин:</dt>
                        <dd class="col-sm-8">@Model.Login</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Имя:</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Фамилия:</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Телефон:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Дата регистрации:</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Статус:</dt>
                        <dd class="col-sm-8">@(Model.IsActive ? "Активен" : "Неактивен")</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="EditProfile" class="btn btn-primary me-2">Редактировать профиль</a>
                        <a asp-action="ChangePassword" class="btn btn-warning">Сменить пароль</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>