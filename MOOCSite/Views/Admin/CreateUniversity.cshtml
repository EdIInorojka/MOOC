@using MOOCSite.Models
@model University
@{
    ViewData["Title"] = "Добавление университета";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="CreateUniversity" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Название университета*</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Сохранить
            </button>
            <a asp-action="Universities" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}